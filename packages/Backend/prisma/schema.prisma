generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userName String     @id
  email    String     @unique
  name     String
  password String
  avgSpeed Int        @default(0)
  role     Role       @default(BASIC)
  practice Practice[]
  test     Test[]
}

model Test {
  userParagraphId String    @id
  speed           Int
  paragraph       Paragraph @relation(fields: [paragraphId], references: [id])
  paragraphId     Int
  user            User      @relation(fields: [userId], references: [userName])
  userId          String
}

model Paragraph {
  id   Int    @id
  size Size
  text String
  test Test[]
}

model Practice {
  userLessonId String  @id
  user         User    @relation(fields: [userId], references: [userName])
  userId       String
  lesson       Lesson  @relation(fields: [lessonId], references: [id])
  lessonId     Int
  avgSpeed     Int     @default(0)
  isComplete   Boolean @default(false)
}

model Lesson {
  id       Int        @id
  name     String
  text     String
  practice Practice[]
}

enum Role {
  BASIC
  ADMIN
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}
